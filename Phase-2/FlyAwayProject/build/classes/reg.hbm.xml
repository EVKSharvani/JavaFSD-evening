<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping package="com.simplillearn">
    	<class name="UserReg" table="user">
    		<id name="ID" type="long" column="ID">
    			<generator class="identity"></generator>
    		</id>
    		<property name="fname" type="string" column="FNAME"></property>
    		<property name="lname" type="string" column="LNAME"></property>
    		<property name="email" type="string" column="EMAIL"></property>
    		<property name="pwd" type="string" column="PWD"></property>
    		<property name="phno" type="string" column="PHNO"></property>
    		
    	</class>
    </hibernate-mapping>